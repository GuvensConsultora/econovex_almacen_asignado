<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista principal del usuario -->
    <record id="view_users_form_inherit_sale_journal" model="ir.ui.view">
        <field name="name">res.users.form.inherit.sale.journal</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="priority">50</field>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='preferences']//group[@name='other_preferences']" position="inside">
                <field name="sale_journal_id"/>
            </xpath>
        </field>
    </record>
</odoo>
